{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "outDir": "client/dist/lib",
    "declarationDir": "client/dist/types",
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "paths": {
      "crypto": [
        "./node_modules/crypto-browserify"
      ]
    }
  },
  "include": [
    "client/src"
  ]
}